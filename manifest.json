{
  "manifest_version": 3,
  "name": "Productivity Master",
  "version": "1.1",
  "description": "Tracks time spent on websites for productivity.",
  "permissions": [
    "tabs",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://www.google.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}